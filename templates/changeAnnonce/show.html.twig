{% extends 'base.html.twig' %}

{% block title %}Les échanges{% endblock %}

{% block body %}

<div class="container text-center">
    <div class="row my-4">
      {% set a = change %}
            <div class="col-2">
            </div>
            <div class="col-3">
                <img src="{{a.author.picture}}" class="img_profil" alt="Photo de profil de {{a.author.firstName}} - {{a.author.lastName}}">
            </div>
            <div class="col-4">
              <h4>{{a.author.firstName}} {{a.author.lastName}}</h4><p> j'aimerais échanger {{change.montant}} {{ change.deviseA|capitalize}} contre des {{change.deviseB|capitalize}} dans la ville de {{ change.ville|capitalize }}</p>
            </div>       
    </div>
</div>

{% endblock %}


