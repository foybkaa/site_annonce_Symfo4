{% extends 'base.html.twig' %}

{% block title %}Connexion au site{% endblock %}

{% block body %}

<div class="container">
    <section class="col-md-7 bg-light shadow rounded container my-5 sectionForm">
        <h2 class="py-4 px-5 text-center titreForm">Connexion</h2>

        {% if hasError %}

            <div class="alert alert-danger text-center">Erreur ! l'email ou le mot de passe est incorrect
            </div>

        {% endif %}


        <form action="{{ path('account_login') }}" method="POST" class="p-4">
            <div class="form-group">
                <label for="email">Email</label>
                <input type="text" name="_username" id="email" class="form-control" placeholder="Adresse email" required value="{{username}}">
            </div>
            <div class="form-group">
                <label for="password">Mot de passe</label>
                <input type="password" name="_password" id="password" class="form-control" placeholder="mot de passe" required>
            </div>
            <div class="form-group text-center">
                <button type="submit" class="btn btn-success">Connexion</button>
            </div>
        </form>
    <section>
</div>
{% endblock %}
